{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "API: Stable (no reload)",
      "type": "shell",
      "command": "& \"${workspaceFolder}/.conda/python.exe\" -m uvicorn app.main:app",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "API: Dev (safe reload)",
      "type": "shell",
      "command": "& \"${workspaceFolder}/.conda/python.exe\" -m uvicorn app.main:app --reload --reload-dir app --reload-dir pipelines --reload-exclude \".conda/*\" --reload-exclude \"data/*\" --reload-exclude \"reports/*\"",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "Dashboard: Streamlit",
      "type": "shell",
      "command": "& \"${workspaceFolder}/.conda/python.exe\" -m streamlit run dashboard/streamlit_app.py",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    }
  ]
}
